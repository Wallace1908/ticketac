<!DOCTYPE html>
<html>
    <head>
        <title>Ticketac</title>

        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <!-- CSS Link -->
        <link rel="stylesheet" href='../stylesheets/style.css'/>

        <!-- Fontawesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    </head>

    <body>

        <%- include('header') %>
        
        <div class="container">
            <div class="row">
                <div class="col-12 offset-md-2 mt-4 mb-2">
                    <h1 id="onewayticket">One way ticket:</h1>
                </div>
            </div>
                

            <div class="row">
                <div class="col-12">
                    <form class="row" action="/search" method="POST">
                        <div class="col-12 offset-md-1 col-md-3">               
                            <div class="form-group my-2">                      
                                <input name="fromFromFront" type="text" class="form-control" placeholder="From: Paris, Marseille...">
                            </div>
                        </div>    
                        <div class="col-12 col-md-3">
                            <div class="form-group my-2">              
                                <input name="toFromFront" type="text" class="form-control" placeholder="To: Lille, Nantes..."> 
                            </div>         
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-group d-flex my-2">              
                                <input name="dateFromFront" type="date" class="form-control" value="" min="2018-11-01" max="2018-11-31">
                                <button type="submit" class="btn btn-danger ms-2">Go</button> 
                            </div>         
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <img class="rounded mx-auto d-block my-5" height="200" src="./images/landmark.png" alt="citypic"/>
                </div>
            </div>
            <%- include('footer') %>
        </div>
    </body>
</html>